{
  "info": {
    "name": "Student Service APIs",
    "description": "Postman collection for Student Management Service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8081"
    }
  ],
  "item": [
    {
      "name": "Create Student",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/students",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "students"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"studentName\": \"Rahul Sharma\",\n  \"grade\": \"10\",\n  \"mobileNumber\": \"9876543210\",\n  \"schoolName\": \"Delhi Public School\"\n}"
        }
      }
    },
    {
      "name": "Get Student By ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/students/1",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "students",
            "1"
          ]
        }
      }
    },
    {
      "name": "Get All Students",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/students",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "students"
          ]
        }
      }
    }
  ]
}
